  <tbody>
    <% @page_turners.each do |page_turner| %>
      <tr>
        <td><%= link_to 'Show', page_turner %></td>
        <td><%= link_to 'Edit', edit_page_turner_path(page_turner) %></td>
        <td><%= link_to 'Destroy', page_turner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
